{
	"compilerOptions": {
		/* Visit https://aka.ms/tsconfig.json to read more about this file */
		"target": "es2021",
		"module": "commonjs",
		"strict": false,
		"noImplicitAny": true,
		"baseUrl": "./src",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./build",
		"rootDir": "./src",
		"typeRoots": ["index.d.ts"]
	},
	"lib": ["es2021"],
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
